import java.io.*;

public class chdir
{
    public chdir()
    {
    }
    public void show(String message)
    {
	System.out.println(message);
    }
    String in;
    public String mychdir()
    {
	show("移動したいディレクトリやファイル名を入力してください。");
	try
	    {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		in = br.readLine();
		return in;
	    }
	catch(Exception error)
	    {
		show("入力エラー");
	    }
	return in;
    }
    String str;
    String path;
    public String Split()
    {
	show("文字列の分割");
	String s1[] = in.split(" ");
	in = s1[1];
        str = in;
	show(str);
	return str;
    }
    public void ch()
    {
	show("変更前：" + chdir_change());
        show("変更後：" + setdir());
    }
    public String chdir_change()
    {
	 path = System.getProperty("user.dir");
	//show("変更前：" + path);
	return path;
    }
    public String setdir()
    {
	 System.setProperty("user.dir", str);
	 return str;
    }
    
    
}

